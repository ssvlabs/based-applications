{
  "plugins": ["prettier-plugin-solidity"],
  "singleQuote": false,
  "trailingComma": "none",
  "printWidth": 100,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "slang",
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true
      }
    }
  ]
}